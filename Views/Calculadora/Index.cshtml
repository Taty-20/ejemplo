@model ejemplo.Models.Calculadora

<div class="text-center">
    <h1 class="display-4">Contactenos</h1>

    <form asp-controller="Calculadora" asp-action="Calcular">
        
        <input asp-for="Operador1" class="form-control"/>
        <input asp-for="Operador2" class="form-control"/>
        <select asp-for="Operando" class="form-control">
            <option value="+">Suma</option>
            <option value="-">Resta</option>
            <option value="*">Multiplicacion</option>
            <option value="/">Division</option>
        </select>

        <br><button type="submit" class="btn btn-primary">Calcular</button>
    </form>
    <br><h1>@ViewData["Message"]</h1>
</div>